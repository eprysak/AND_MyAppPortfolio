<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.myappportfolio.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Nanodegree Apps!"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:textSize="24sp"
        android:textColor="@android:color/black"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Popular Movies"
        android:onClick="popularMovies"
        android:layout_gravity="center_horizontal"
        android:padding="24dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Stock Hawk"
        android:onClick="stockHawk"
        android:layout_gravity="center_horizontal"
        android:padding="24dp"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Build It Bigger"
        android:onClick="buildItBigger"
        android:layout_gravity="center_horizontal"
        android:padding="24dp"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Make Your App Material"
        android:onClick="makeYourAppMaterial"
        android:layout_gravity="center_horizontal"
        android:padding="24dp"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Go Ubiquitous"
        android:onClick="goUbiquitous"
        android:layout_gravity="center_horizontal"
        android:padding="24dp"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Capstone"
        android:onClick="capstone"
        android:layout_gravity="center_horizontal"
        android:padding="24dp"/>

</LinearLayout>
